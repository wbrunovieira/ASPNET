@model IEnumerable<Product>

<h2 class="text-white">Products</h2>


<div style="display: block">
    <a class="text-white" href="/Product/InsertProduct/">Create a New Product</a>
</div>
@using (Html.BeginForm("Search", "Product", FormMethod.Get, new { style = "margin-left:250px; margin-top:50px; margin-bottom:30px", @class = "thFormClass " }))
{
    <p class="text-white">
        Search Best Buy Products by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
        
    </p>
}
    <table class="table table-light table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category ID</th>
                <th>On Sale</th>
                <th>Stock Level</th>
            </tr>
        </thead>
        @foreach (var product in Model)
        {
            <tr>
                <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.CategoryID</td>
                <td>@product.OnSale</td>
                <td>@product.StockLevel</td>
            </tr>


        }
    </table>
